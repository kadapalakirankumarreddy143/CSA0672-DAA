#include <stdio.h>
int main() {
    int n, i;
    int count=0;
    unsigned long long fact = 1;
    printf("Enter an integer: ");
    scanf("%d", &n);
    count++;
    if (n < 0)
        printf("Error! Factorial of a negative number doesn't exist.");
    else {
        for (i = 1; i <= n; ++i) {
            fact *= i;
            count++;
        }
        printf("Factorial of %d = %llu \n  ", n, fact);
        printf(" time compexity : %d ",count);
    }

    return 0;
}
